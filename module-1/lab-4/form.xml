<html xmlns:xf="http://www.w3.org/2002/xforms">
<head>
	<xf:model>
		<xf:instance>
			<first_name/>
			<surname/>
			<hobby/>
			<music/>
			<literature/>
			<movie/>
		</xf:instance>
		<xf:submission id="user-form" method="post"/>
	</xf:model>
</head>

<body>
	<xf:input ref="first_name">
		<xf:label>Ім'я</xf:label>
	</xf:input>
	<xf:input ref="surname">
		<xf:label>Прізвище</xf:label>
	</xf:input>
	<xf:input ref="hobby">
		<xf:label>Хобі</xf:label>
	</xf:input>
	<xf:input ref="music">
		<xf:label>Вподобання у музиці</xf:label>
	</xf:input>
	<xf:input ref="literature">
		<xf:label>Вподобання у літературі</xf:label>
	</xf:input>
	<xf:input ref="movie">
		<xf:label>Жанри кінофільмів</xf:label>
	</xf:input>
	<xf:reset>
		<xf:label>Скинути</xf:label>
	</xf:reset>
	<xf:submit submission="user-form">
		<xf:label>Підтвердити</xf:label>
	</xf:submit>
</body>
</html>